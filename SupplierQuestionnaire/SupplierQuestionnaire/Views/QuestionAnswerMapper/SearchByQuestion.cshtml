@model IEnumerable<SupplierQuestionnaire.Models.QuestionAnswerMapper>

@{
    ViewBag.Title = "SearchByQuestion";
}

<h2>Search by Question</h2>

<p>
    Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm()){     
         <p>Question: @Html.DropDownList("questionString", "All") <br />
             <input type="submit" value="Filter" />
         </p>
    }
</p>
<table>
    <tr>
        <th>
            Supplier ID
        </th>

        <th>
            Answer
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SupplierId)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Answer)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { quesId = item.QuestionId,suppId = item.SupplierId }) |
            @Html.ActionLink("Details", "Details", new { quesId = item.QuestionId,suppId = item.SupplierId }) |
            @Html.ActionLink("Delete", "Delete", new { quesId = item.QuestionId,suppId = item.SupplierId })
        </td>
    </tr>
}

</table>
